    <% layout('layouts/boilerplate')%>
    <div class="d-flex">
        <h1 class="mb-3 mx-auto display-4 fw-bold">
            All Campgrounds
        </h1>
    </div>
    <div id="cluster-map" class="mb-3"></div>
    
        <% for( let campground of campgrounds ) { %>

        <div class="card mb-3">
           <div class="row">
                <div class="col-lg-4 col-md-6">
                    <a href="/campgrounds/<%= campground._id %>">
                    <% if (campground.images.length) { %>
                        <img class="img-fluid" src="<%= campground.images[0].url %>" alt="" crossorigin="anonymous">
                    <% } else { %>
                        <img crossorigin="anonymous" class="img-fluid" src="https://res.cloudinary.com/dfp75qktr/image/upload/v1688587140/YelpCamp/dmbiufyr475ctkrsp0vo.jpg" alt="Default Image">
                        <% } %>
                    </a>
                </div>
                <div class="col-lg-8 col-md-6">
                    <div class="card-body">
                        <a href="/campgrounds/<%= campground._id %>" class="text-decoration-none stretched-link">
                            <h5 class="card-title link-dark"><%= campground.title %></h5>
                        </a>
                        <p class="card-text"><%= campground.description %></p>
                        <p class="card-text">
                            <small class="text-secondary"><%= campground.location %></small>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <% } %>
        <script>
            const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
            const campgrounds = {features: <%-JSON.stringify(campgrounds)%>}
        </script>
        <script src="/javascripts/clusterMap.js"></script>
        
 
